@import '../../node_modules/vuetify/src/stylus/settings/_colors'
$theme := {
  primary: $light-blue.darken-1
  accent: $light-blue.accent-2
  secondary: $grey.darken-3
  info: $light-blue.base
  warning: $amber.base
  error: $red.base
  success: $green.base
}
@import '../../node_modules/vuetify/src/stylus/main'

header
  > .card
    height: 50px !important
    .logo
      padding-left: 15px
      line-height: @height
    .menu-login
      button
        height: @height
        margin: 0
        border-radius: 0
        text-transform: none
    .menu-languages
      .subheader
        margin-top: 0.1em
        justify-content: flex-end
      .menu
        width: 100%
        text-align center
.btn--floating.btn--small
  padding: 0
.btn-center
  margin-right: auto
  margin-left: auto
  display: block
.menu
  height: 100%
  .menu__activator
    font-size: 18px
.login-form
  margin-top: 100px
  .input-group--select
    margin-top: 5px
#settings
  margin-top: 15px
  .select-form
    margin-bottom: 0
  .form-description
    textarea
      min-height: 100px
@media only screen and (max-width: 599px)
  .menu-login
    .icon
      margin-right: 0 !important