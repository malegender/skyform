@import '../../node_modules/vuetify/src/stylus/settings/_colors'
$theme := {
  primary: $light-blue.darken-1
  accent: $light-blue.accent-2
  secondary: $grey.darken-3
  info: $light-blue.base
  warning: $amber.base
  error: $red.base
  success: $green.base
}
@import '../../node_modules/vuetify/src/stylus/main'

header
  > .card
    height: 56px !important
    .layout
      width: 100%
      .logo
        padding-left: 15px
        line-height: @height
      .menu-login
        button
          height: @height
          margin: 0
          border-radius: 0
          text-transform: none
      .menu-languages
        .subheader
          margin-top: 0.4em
          justify-content: flex-end
        .menu
          width: 100%
          text-align center
          img
            margin-top: 0.8em
.btn--floating.btn--small
  padding: 0
.btn-center
  margin-right: auto
  margin-left: auto
  display: block
.menu
  height: 100%
  .menu__activator
    font-size: 18px
.login-form
  margin-top: 100px
  .input-group--select
    margin-top: 5px
#settings
  margin-top: 15px
  .select-form
    margin-bottom: 0
  .form-description
    textarea
      min-height: 100px
#form-content
  padding: 0 15px
  .wrap-content
    padding: 10px !important;
    border: 1px solid #ccc;
    .sort-block
      padding: 15px 20px
      margin-top: 10px
      min-height: 50px
      border: 1px dashed #cccccc;
      background: whitesmoke linear-gradient(#f4f4f4, #f1f1f1);
      div
        span
          display: block
          min-height: 20px
      &:first-child {
        margin-top: 0
      }
    .sort-field
      padding: 0 20px
      margin-top: 10px
      height: 55px !important
@media only screen and (max-width: 599px)
  .dialog__content
    .dialog--active
      width: 100% !important
  .menu-login
    .icon
      margin-right: 0 !important
  #form-content
    .wrap-content
      padding: 10px !important